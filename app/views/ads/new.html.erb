<h1>Create An Ad</h1>
<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">	
	<%= form_for @ad  do |f|  %>
	  <%= render 'shared/error_messages', object: f.object %>
	  <div class="field">   
	  	<%= f.label :book_id %></br>
	  	<%= f.select "books_id", options_from_collection_for_select(Book.all, 'id', 'title')%><br/>
	  <%= link_to('Create New Book', new_book_path)  %>
	  <div class="field">   
	  	<%= f.label :title %></br>
		<%= f.text_field :title %>
	  </div>
	  <div class="field">  
		<%= f.label :description %></br>
	    <%= f.text_area :description, placeholder: "Ad Description...", size: "70x10"  %>
	  </div>
	  <div class="field">  
		<%= f.label :price%></br>
		<%= f.text_field :price %>  
	  </div>
	<%= fields_for :ad do |u| %>  
    	<div class="field"> 
	    </div>
	<% end %>
	  <span class="picture">
	    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
	  </span>
	  <br/><br/>
	  <%= f.submit "Create Ad", class: "btn btn-primary" %>&nbsp;&nbsp; <%= link_to "Cancel", '/' %>
	  <br/><br/>
	<% end %>
  </div>
</div>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>