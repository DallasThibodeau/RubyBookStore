<li id="ad-<%= ad.id %>">
  <span class="content">
	<h2><%= ad.title %></h2><br/>
    <%= image_tag ad.picture.url if ad.picture? %>&nbsp;&nbsp;
    
	<div class="row">
	    <%= ad.price %><br/>
		<%= ad.book.authors %><br/>
		<%= ad.book.publishers %><br/>
		<%= ad.book.edition %><br/>
	</div>
	<div class="row">
		<%= ad.description %><br/>
	</div>
  </span>
  
  <span class="timestamp">
    Posted <%= time_ago_in_words(ad.created_at) %> ago.
    <% if current_user?(ad.user) %>
      <%= link_to "delete", ad, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>