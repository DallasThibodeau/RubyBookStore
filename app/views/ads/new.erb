<h1>Create An Ad</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">	
		<%= form_for(Ad.new, html: { multipart: true }) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
		  <div class="field">   
		  	<%= f.label :title %>
			<%= f.text_field :title %>  
			
    	<% fields_for (@ad, @ad.books.build) do |u| %>        
		  	<%= f.label :publishers %>
			<%= f.text_field :publishers %>    
		  	<%= f.label :authors %>
			<%= f.text_field :authors %>
    	<% end %>
    	
			<%= f.label :description %>
		    <%= f.text_area :description, placeholder: "Ad Description..." %>
			<%= f.label :price%>
			<%= f.text_field :price %>
		  </div>
		  <br/><br/>
		  <%= f.submit "Create Ad", class: "btn btn-primary" %>
		  <br/><br/>
		  <span class="picture">
		    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
		  </span>
		<% end %>
  </div>
</div>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>